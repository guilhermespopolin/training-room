{
  "name": "advice-generator",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"npm run build:css\" \"npm run build:remix\"",
    "build:css": "npx tailwindcss -o app/styles/app.css -m",
    "build:remix": "remix build",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:remix\"",
    "dev:remix": "remix dev",
    "dev:css": "npx tailwindcss -o app/styles/app.css -w",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
